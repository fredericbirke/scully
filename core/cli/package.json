{
  "name": "@scullyio/scully",
  "version": "3.0.0-beta.1",
  "description": "Scully CLI",
  "repository": {
    "type": "GIT",
    "url": "https://github.com/scullyio/scully/tree/main/libs/scully"
  },
  "bin": {
    "scully": "./bin/scully.mjs"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "bin/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "default": "./bin/index.js",
        "types": "./bin/index.d.ts"
      }
    },
    "./scully.mjs": "./bin/scully.mjs",
    "./package.json": "./package.json"
  },
  "main": "./bin/index.js",
  "types": "./bin/index.d.ts",
  "type": "module",
  "author": "@herodevs",
  "license": "MIT",
  "scripts": {
    "build": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc --build",
      "files": [
        "src/",
        "package.json",
        "tsconfig.json"
      ],
      "output": [
        "bin/**",
        "bin/**/*"
      ]
    }
  },
  "dependencies": {
    "@sentry/node": "^7.29.0",
    "asciidoctor": "^2.2.6",
    "chalk": "^5.2.0",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.1.0",
    "guess-parser": "^0.4.22",
    "http-proxy-middleware": "^2.0.6",
    "jsdom": "^21.0.0",
    "jsonc": "2.0.0",
    "marked": "^4.2.5",
    "open": "^8.4.0",
    "prismjs": "^1.29.0",
    "puppeteer": "^19.4.1",
    "rxjs": "^7.8.0",
    "selfsigned": "^2.1.1",
    "ws": "^8.12.0",
    "yaml": "^2.2.1",
    "yargs": "^17.6.2",
    "tslib": "^2.4.1"
  },
  "optionalDependencies": {
    "asciidoctor.js": "^2.2.6"
  },
  "peerDependencies": {
    "@angular/common": ">=15.0.0",
    "@angular/compiler": ">=15.0.0",
    "@angular/core": ">=15.0.0",
    "@angular/platform-server": ">=15.0.0",
    "typescript": ">=4.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jsdom": "^20.0.1",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.11.18",
    "@types/ws": "^8.5.4",
    "@types/yargs": "^17.0.19"
  },
  "keywords": [
    "angular",
    "scully",
    "seo",
    "scully-plugin",
    "plugin"
  ]
}
