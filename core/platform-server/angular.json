{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "apps",
  "projects": {
    "@scullyio/ng-lib": {
      "projectType": "library",
      "root": "core/ng-lib",
      "sourceRoot": "core/ng-lib/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "core/ng-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "core/ng-lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "core/ng-lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "core/ng-lib/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    },
    "sample-blog": {
      "projectType": "application",
      "schematics": {},
      "root": "tests/sample-blog",
      "sourceRoot": "tests/sample-blog/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser-esbuild",
          "options": {
            "outputPath": "dist/sample-blog",
            "index": "tests/sample-blog/src/index.html",
            "main": "tests/sample-blog/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tests/sample-blog/tsconfig.app.json",
            "assets": ["tests/sample-blog/src/favicon.ico", "tests/sample-blog/src/assets"],
            "styles": ["tests/sample-blog/src/styles.css"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "sample-blog:build:production"
            },
            "development": {
              "browserTarget": "sample-blog:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "sample-blog:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "tests/sample-blog/tsconfig.spec.json",
            "assets": ["tests/sample-blog/src/favicon.ico", "tests/sample-blog/src/assets"],
            "styles": ["tests/sample-blog/src/styles.css"],
            "scripts": []
          }
        }
      }
    },
    "@scullyio/platform-server": {
      "projectType": "library",
      "root": "core/platform-server",
      "sourceRoot": "core/platform-server/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "core/platform-server/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "core/platform-server/tsconfig.json"
            },
            "development": {
              "tsConfig": "core/platform-server/tsconfig.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "core/platform-server/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": "9e7f8168-71ba-4a98-b0dd-d274fd500213"
  }
}
