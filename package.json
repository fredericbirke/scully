{
  "name": "scullyio",
  "version": "3.1.0-beta",
  "license": "MIT",
  "url": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/scullyio/scully.git"
  },
  "engines": {
    "": "This is for building Scully itself, using is fine with 16+",
    "node": ">=18"
  },
  "scripts": {
    "build": "wireit",
    "build:ngLib": "wireit",
    "build:platformServer": "wireit",
    "build:sampleBlog": "wireit",
    "serve:sampleBlog": "wireit",
    "scully": "wireit",
    "symlinks": "npx symlink-dir ./dist/scullyio/platform-server node_modules/@scullyio/platform-server && npx symlink-dir ./dist/scullyio/ng-lib node_modules/@scullyio/ng-lib",
    "prepare": "git config core.hooksPath .git-hooks"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "./core/cli:build",
        "./core/plugins/puppeteer:build",
        "./plugins/base-href-rewrite:build",
        "./plugins/copy-to-clipboard:build",
        "./plugins/critical-css:build",
        "./plugins/docs-link-update:build",
        "./plugins/extra-data:build",
        "./plugins/extra:build",
        "./plugins/remove-scripts:build",
        "build:ngLib",
        "build:platformServer",
        "build:sampleBlog"
      ]
    },
    "build:ngLib": {
      "command": "ng build @scullyio/ng-lib --configuration production",
      "files": [
        "./core/ng-lib/src/**",
        "./core/ng-lib/package.json",
        "./core/ng-lib/ng-package.json",
        "./core/ng-lib/tsconfig.lib.json",
        "./core/ng-lib/README.md",
        "angular.json"
      ],
      "output": [
        "dist/scullyio/ng-lib"
      ]
    },
    "build:platformServer": {
      "command": "ng build @scullyio/platform-server --configuration production",
      "files": [
        "./core/platform-server/src/**",
        "./core/platform-server/package.json",
        "./core/platform-server/ng-package.json",
        "./core/platform-server/tsconfig.lib.json",
        "./core/platform-server/README.md",
        "angular.json"
      ],
      "output": [
        "dist/scullyio/platform-server"
      ],
      "dependencies": [
        "build:ngLib"
      ]
    },
    "build:sampleBlog": {
      "command": "ng build sample-blog --configuration production",
      "files": [
        "./tests/sample-blog/src/*",
        "./tests/sample-blog/",
        "angular.json"
      ],
      "output": [
        "dist/sample-blog"
      ],
      "dependencies": [
        "build:ngLib"
      ]
    },
    "serve:sampleBlog": {
      "command": "scully serve --tds  --404=index --noCache --proxy proxy.conf.cjs --RSD",
      "service": true,
      "dependencies": [
        {
          "script": "build",
          "cascade": false
        }
      ]
    },
    "scully": {
      "command": "scully --RSD",
      "dependencies": [
        "build",
        "symlinks"
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.2.0-next.2",
    "@angular/common": "^15.2.0-next.2",
    "@angular/compiler": "^15.2.0-next.2",
    "@angular/core": "^15.2.0-next.2",
    "@angular/forms": "^15.2.0-next.2",
    "@angular/platform-browser": "^15.2.0-next.2",
    "@angular/platform-browser-dynamic": "^15.2.0-next.2",
    "@angular/router": "^15.2.0-next.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.4.1",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.0-next.2",
    "@angular/cli": "~15.2.0-next.2",
    "@angular/compiler-cli": "^15.2.0-next.2",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-angular": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@commitlint/cz-commitlint": "^17.4.2",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "lint-staged": "^13.1.0",
    "ng-packagr": "^15.0.0",
    "prettier": "^2.8.2",
    "symlink-dir": "^5.1.0",
    "typescript": "~4.8.2",
    "wireit": "^0.9.3"
  },
  "workspaces": [
    "core/cli",
    "core/ng-lib",
    "core/platform-server",
    "core/plugins/*",
    "plugins/*"
  ],
  "lint-staged": {
    "*.{js,ts,html,scss,md,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
