{
  "name": "scullyio",
  "version": "3.1.0-beta",
  "license": "MIT",
  "url": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/scullyio/scully.git"
  },
  "engines": {
    "": "This is for building Scully itself, using is fine with 16+",
    "node": ">=18"
  },
  "scripts": {
    "build": "wireit",
    "build:ngLib": "wireit",
    "build:sampleBlog": "wireit",
    "prepare": "git config core.hooksPath .git-hooks"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "./core/cli:build",
        "./core/plugins/puppeteer:build",
        "./plugins/base-href-rewrite:build",
        "./plugins/extra:build",
        "./plugins/extra-data:build",
        "build:ngLib",
        "build:sampleBlog"
      ]
    },
    "build:ngLib": {
      "command": "ng build @scullyio/ng-lib --configuration production",
      "files": [
        "./core/ng-lib/src/**",
        "./core/ng-lib/package.json",
        "./core/ng-lib/ng-package.json",
        "./core/ng-lib/tsconfig.lib.json",
        "./core/ng-lib/README.md",
        "angular.json"
      ],
      "output": [
        "dist/scullyio/ng-lib"
      ]
    },
    "build:sampleBlog": {
      "command": "ng build sample-blog --configuration production",
      "files": [
        "./tests/sample-blog/src/*",
        "./tests/sample-blog/",
        "angular.json"
      ],
      "output": [
        "dist/sample-blog"
      ],
      "dependencies": [
        "build:ngLib"
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.0.4",
    "@angular/common": "^15.0.4",
    "@angular/compiler": "^15.0.4",
    "@angular/core": "^15.0.4",
    "@angular/forms": "^15.0.4",
    "@angular/platform-browser": "^15.0.4",
    "@angular/platform-browser-dynamic": "^15.0.4",
    "@angular/router": "^15.0.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.4.1",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.4",
    "@angular/cli": "~15.0.5",
    "@angular/compiler-cli": "^15.0.4",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-angular": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@commitlint/cz-commitlint": "^17.4.2",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "lint-staged": "^13.1.0",
    "ng-packagr": "^15.0.0",
    "prettier": "^2.8.2",
    "typescript": "~4.8.2",
    "wireit": "^0.9.3"
  },
  "workspaces": [
    "core/cli",
    "core/ng-lib",
    "core/plugins/puppeteer",
    "plugins/*"
  ],
  "lint-staged": {
    "*.{js,ts,html,scss,md,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
